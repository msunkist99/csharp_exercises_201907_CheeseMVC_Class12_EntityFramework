@model List<csharp_exercises_201907_CheeseMVC_Class12_EntityFramework.Models.CheeseCategory>

<h1>Cheese Categories</h1>

<p><a hidden asp-controller="Category" asp-action="Add">Add Category</a></p>
<p><a hidden asp-controller="Category" asp-action="DeleteCheckbox">Delete Category Checkbox</a></p>
<p><a hidden asp-controller="Category" asp-action="DeleteDropdownList">Delete Category Dropdown List</a></p>

@if (Model.Count == 0)
{
    <p>No categories yet!</p>
}
else
{
    <table class="table">

        <tr>
            <th hidden></th>
            <th>Category Name</th>
        </tr>

        @foreach (var category in Model)
        {
            <tr>
                <td hidden>
                    <p><a hidden asp-controller="Category" asp-action="Edit" asp-route-cheeseId="@category.ID" >Edit Category</a></p>
                </td>
                <td>@category.Name</td>
            </tr>
        }

    </table>

    <p><a asp-controller="Category" asp-action="Add">Add Category</a></p>

}

