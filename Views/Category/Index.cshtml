@model List<csharp_exercises_201907_CheeseMVC_Class12_EntityFramework.Models.CheeseCategory>

<h1>Cheese Categories</h1>

<p><a asp-controller="Category" asp-action="Add">Add Category</a></p>
<p><a asp-controller="Category" asp-action="DeleteCheckbox">Delete Category Checkbox</a></p>
<p><a asp-controller="Category" asp-action="DeleteDropdownList">Delete Category Dropdown List</a></p>

@if (Model.Count == 0)
{
    <p>No categories yet!</p>
}
else
{
    <table class="table">

        <tr>
            <th></th>
            <th>Name</th>
            <th>Description</th>
            <th>Cheese Type</th>
            <th>Cheese Rating</th>
        </tr>

        @foreach (var category in Model)
        {
            <tr>
                <td>
                    <p><a asp-controller="Category" asp-action="Edit" asp-route-cheeseId="@category.ID">Edit Category</a></p>
                </td>
                <td>@category.Name</td>
            </tr>
        }

    </table>

    <p><a asp-controller="Category" asp-action="Add">Add Category</a></p>

}

