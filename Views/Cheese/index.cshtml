@model List<csharp_exercises_201907_CheeseMVC_Class12_EntityFramework.Models.Cheese>

<h1>My Cheese</h1>

@if (Model.Count == 0)
{
	<p>No cheeses yet!</p>
}
else
{
	<table class="table">

		<tr>
			<th></th>
			<th>Name</th>
			<th>Description</th>
			<th>Cheese Category</th>
			<th>Cheese Rating</th>
		</tr>

		@foreach (var cheese in Model)
		{
			<tr>
				<td>
					<p><a asp-controller="Cheese" asp-action="Edit" asp-route-cheeseId="@cheese.ID">Edit Cheese</a></p>
				</td>
				<td>@cheese.Name</td>
				<td>@cheese.Description</td>
				<td>@cheese.Category.Name</td>
				<td>@cheese.Rating</td>
			</tr>
		}
	</table>

	<a asp-controller="Cheese" asp-action="Add">Add Cheese</a>
	<label> | </label>
	<a asp-controller="Cheese" asp-action="DeleteCheckbox">Delete Cheese Checkbox</a>
	<label> | </label>
	<a asp-controller="Cheese" asp-action="DeleteDropdownList">Delete Cheese Dropdown List</a>
}
