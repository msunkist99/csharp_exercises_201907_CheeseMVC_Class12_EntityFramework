@model List<csharp_exercises_201907_CheeseMVC_Class12_EntityFramework.Models.Menu>

<h1>My Cheese Menus</h1>

@if (Model.Count == 0)
{
    <p>No cheese menus yet!</p>
}
else
{
    <table class="table">

        <tr>
            <th hidden></th>
            <th>Menu Name</th>
        </tr>

        @foreach (var menu in Model)
        {
            <tr>
                <td hidden>
                    <p><a hidden asp-controller="Menu" asp-action="Edit" asp-route-id=@menu.ID>Edit Menu</a></p>
                </td>
                <td>
                    <p><a asp-controller="Menu" asp-action="ViewMenu" asp-route-menuId=@menu.ID>@menu.Name</a></p>
                </td>
            </tr>
        }
    </table>

    <p><a asp-controller="Menu" asp-action="Add">Add Menu</a></p>


}