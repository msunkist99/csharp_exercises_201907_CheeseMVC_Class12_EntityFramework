@model List<csharp_exercises_201907_CheeseMVC_Class12_EntityFramework.Models.Menu>

<h1>My Cheese Menus</h1>

<p><a asp-controller="Menu" asp-action="Add">Add Menu</a></p>

@if (Model.Count == 0)
{
    <p>No cheese menus yet!</p>
}
else
{
    <table class="table">

        <tr>
            <th></th>
            <th>Name</th>
            <th>Description</th>
            <th>Cheese Category</th>
            <th>Cheese Rating</th>
        </tr>

        @foreach (var menu in Model)
        {
            <tr>
                <td>
                    <p><a asp-controller="Menu" asp-action="Edit" asp-route-id="@menu.ID">Edit Menu</a></p>
                </td>
                <td>@menu.Name</td>
            </tr>
        }
    </table>
}